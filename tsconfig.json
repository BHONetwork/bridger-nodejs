{
  "compilerOptions": {
    "lib": ["es2018"],
    "rootDirs": ["tests", "src"],
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "types": ["reflect-metadata"],
    "baseUrl": ".",
       "paths": {
           "*": [
               "tests/*",
           ],
           "@lib/*": ["src/lib/*"],
           "@tasks/*": ["src/tasks/*"],
           "@di": ["src/inversify.config.ts"]
     },
  },
  "include": [
    "src/**/*.ts",
    ".env",
    ".env.*",
    "tests/**/*.ts",
    "index.ts",
    "jest.config.js",
    "config/*.config.js" // for *.config.js files
  ],
  "exclude": [
    "node_modules",
  ]
}